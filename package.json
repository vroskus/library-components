{
  "name": "@vroskus/library-components",
  "version": "1.0.59",
  "description": "Components",
  "author": "Vilius Ro≈°kus <vilius@regattas.eu>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vroskus/library-components.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles -u 1 src/**/*.css dist/",
    "test": "npm run test:eslint && npm run test:type && npm run test:e2e",
    "test:eslint": "eslint src test --fix",
    "test:type": "tsc",
    "test:e2e": "npm run test:e2e:run && npm run test:e2e:post",
    "test:e2e:run": "jest --ci --colors",
    "test:e2e:post": "jest-coverage-thresholds-bumper"
  },
  "dependencies": {
    "availity-reactstrap-validation": "^2.7.1",
    "axios": "^1.13.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "react": "^18.3.1",
    "react-bootstrap-typeahead": "^6.4.1",
    "react-datetime": "^3.3.1",
    "react-hooks-svgdrawing": "^2.1.2",
    "react-modal-image": "^2.6.0",
    "react-quill": "^2.0.0",
    "reactstrap": "^9.2.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.21",
    "@types/moment": "^2.13.0",
    "@types/node": "^25.0.9",
    "@types/react": "^18.3.3",
    "@vroskus/eslint-config": "^1.0.30",
    "copyfiles": "^2.4.1",
    "jest": "^30.2.0",
    "jest-coverage-thresholds-bumper": "^1.1.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "react": "18.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
